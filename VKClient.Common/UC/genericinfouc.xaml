<UserControl x:Class="VKClient.Common.UC.GenericInfoUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:framework="clr-namespace:VKClient.Common.Framework"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" VerticalAlignment="Top">

    <Grid x:Name="LayoutRoot"
          
          Background="{StaticResource PhoneMenuBackgroundBrush}">
        <StackPanel>
            <framework:ScrollableTextBlock Name="textBlockInfo"
                                           Foreground="{StaticResource PhoneMenuForegroundBrush}"
                                           FontSize="24"
                       Margin="20,40,20,8" />

            <RichTextBox Name="richTextBox" Visibility="Collapsed"
                         Foreground="{StaticResource PhoneMenuForegroundBrush}"
                         Margin="20,40,20,8"
                         FontSize="24">
            
               
            </RichTextBox>
        </StackPanel>
    </Grid>
</UserControl>