<UserControl x:Class="VKClient.Common.Profiles.Shared.Views.MediaListItemVideoAlbumUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:framework="clr-namespace:VKClient.Common.Framework"
             mc:Ignorable="d"
             FontFamily="{StaticResource PhoneFontFamilyNormal}"
             FontSize="{StaticResource PhoneFontSizeNormal}"
             Foreground="{StaticResource PhoneForegroundBrush}"
             d:DesignHeight="120"
             d:DesignWidth="182">

    <Grid Background="{StaticResource PhoneChromeBrush}"
          Width="{Binding ContainerWidth, FallbackValue=182}"
          Height="{Binding ContainerHeight, FallbackValue=120}">
        <Image framework:ImageLoader.UriSource="{Binding ImageUri}"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Stretch="UniformToFill" />
        <Image framework:MultiResImageLoader.UriSource="/Resources/Profile/AttachVideoPlay.png"
               Width="56"
               Height="56" />
    </Grid>
</UserControl>