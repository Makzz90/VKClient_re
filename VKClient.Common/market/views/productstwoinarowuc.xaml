<UserControl x:Class="VKClient.Common.Market.Views.ProductsTwoInARowUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:VKClient.Common.Market.Views"
             mc:Ignorable="d"
             FontFamily="{StaticResource PhoneFontFamilyNormal}"
             FontSize="{StaticResource PhoneFontSizeNormal}"
             Foreground="{StaticResource PhoneForegroundBrush}"
             d:DesignHeight="322"
             d:DesignWidth="480">

    <Border Background="{StaticResource PhoneNewsBackgroundBrush}">
        <StackPanel Orientation="Horizontal"
                    Margin="0 0 0 8">

            <views:ProductListItemUC Product="{Binding Item1}"
                                     Margin="8 0 0 0" />

            <views:ProductListItemUC Product="{Binding Item2}"
                                     Visibility="{Binding Item2Visibility}"
                                     Margin="8 0 0 0" />

        </StackPanel>
    </Border>
</UserControl>